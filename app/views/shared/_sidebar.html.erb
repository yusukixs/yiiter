<div class="well sidebar-nav">
<%= render "shared/login_form" unless current_user %>

<% if current_user %>
<p>
<%= user_image_tag current_user, height: 32 %>
<%= link_to current_user.full_name + "さん", :account %> |
<%= link_to "ログアウト", :session,
      method: :delete, data: { confirm: "ログアウトしますか？" } %>
</p>
<p>
<%= link_to "記事を作成する", :new_article %>
</p>
<% end %>

<h2>最新記事</h2>
<ul>
	<% Article.sidebar_articles(current_user, 5).each do |article| %>
	<li>
		<%= link_to article.title, article %>
		<%- model_class = Article -%>
		by <%= link_to article.author.full_name, [article.author, :articles] %>
  	<p><%=l article.released_at %></p>
	</li>
	<% end %>
</ul>
</div>
