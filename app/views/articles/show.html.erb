<%- model_class = Article -%>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
    	<%= @article.title %>
    </h3>
  </div>
  <div class="panel-body">
    <%= markdown @article.description %>
  </div>
  <div class="panel-footer">
  	by <%= user_image_tag @article.author, height: 32 %><%= link_to @article.author.full_name, [@article.author, :articles] %>
  	 | <%= model_class.human_attribute_name(:released_at) %>ï¼š<%=l @article.released_at %>
 	</div>
</div>

<%= link_to t('.back', :default => t("helpers.links.back")),
              articles_path, :class => 'btn btn-default'  %>
<% if current_user %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_article_path(@article), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              article_path(@article),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<% end %>
