<%- model_class = Article -%>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
    	<%= @article.title %>
    </h3>
  </div>
  <div class="panel-body">
    <%= markdown @article.description %>
  </div>
  <div class="panel-footer">
  	by <%= user_image_tag @article.author, class: "img-circle", height: 32 %><%= link_to @article.author.full_name, user_path(@article.author) %>
  	 | <%= model_class.human_attribute_name(:released_at) %>：<%=l @article.released_at %>
  	<p>
  	<% if current_user && current_user.votable_for?(@article) %>
  		<%= link_to "★いいね！", [:like, @article], method: :patch, class: "button" %>
  	<% end %>
  	<p>この記事に<%= @article.votes.count %>人がいいね！しています。</p>
  	<% @article.voters.order("votes.created_at").each do |voter| %>
  		<%= user_image_tag voter, class: "img-circle", height: 32 %>
  	<% end %>
  	</p>	
 	</div>
</div>

<%= link_to t('.back', :default => t("helpers.links.back")),
              articles_path, :class => 'btn btn-default'  %>
<% if current_user %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_article_path(@article), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              article_path(@article),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">コメント一覧</div>
  <% if @comments.present? %>
  <ul class="list-group">
  	<% @comments.each do |comment| %>
    <li class="list-group-item">
		<div class="media">
		  <%= comment_user_image comment, class: "pull-left img-circle article-list-icon", height: 64 %>
		  <div class="media-body">
				<%= markdown comment.comment %>
		   	<%= link_to comment.full_name, user_path(comment.user_id) %>
		  	| <%= "登録日時" %>：<%=l comment.created_at %>	  	
		  </div>
		</div>
    </li>
    <% end %>
  </ul>
  <% else %>
  <p>コメントはまだありません。</p>
  <% end %>
</div>